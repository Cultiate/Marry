<% provide(:title, "新規登録") %>
    <%= form_for(@user, url: signup_path) do |f| %>
    <%= render 'shared/error_messages', model: @user %>
<body>

  <!-- ========== MAIN ========== -->
  <main id="content" role="main">
    <!-- Form -->
    <div class="d-flex align-items-center position-relative min-height-100vh--lg">
      <!-- Navbar -->
      <header class="position-absolute-top-0 z-index-2">
        <nav class="d-flex justify-content-between align-items-center">
        </nav>
      </header>
      <!-- End Navbar -->
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-lg-8 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 u-space-3 u-space-0--lg">
            <!-- Form -->
            <form class="js-validate mt-5">
              <!-- Title -->
              <div class="mb-7">
                <h1 class="h3 text-primary font-weight-normal mb-0">Welcome to <span class="font-weight-bold">SHUKUFUKU.</span></h1>
              </div>
              <!-- End Title -->

              <!-- Input -->
              <div class="js-form-message mb-4">
                <%= f.label :user_name, "ユーザー名", class:"h6 small d-block text-uppercase" %>
                <div class="js-focus-state input-group u-form">
                  <%= f.text_field :user_name, class:"form-control u-form__input" %>
                </div>
              </div>
              <!-- End Input -->

              <!-- Input -->
              <div class="js-form-message mb-4">
                <%= f.label :email, "メールアドレス", class:"h6 small d-block text-uppercase" %>
                <div class="js-focus-state input-group u-form">
                  <%= f.email_field :email, class:"form-control u-form__input" %>
                </div>
              </div>
              <!-- End Input -->

              <!-- Input -->
              <div class="js-form-message mb-4">
              <%= f.label :password, "パスワード", class:"h6 small d-block text-uppercase" %>
                <div class="js-focus-state input-group u-form">
                <%= f.password_field :password , class:"form-control u-form__input"%>
                </div>
              </div>
              <!-- End Input -->

              <!-- Input -->
              <div class="js-form-message mb-3">
                <%= f.label :password_confirmation, "パスワード(確認)", class:"h6 small d-block text-uppercase" %>
                <div class="js-focus-state input-group u-form">
                  <%= f.password_field :password_confirmation, class:"form-control u-form__input" %>
                </div>
              </div>
              <!-- End Input -->

              <!-- Checkbox -->
              <div class="js-form-message mb-5">
                <div class="custom-control custom-checkbox d-flex align-items-center text-muted">
                  <input type="checkbox" class="custom-control-input" id="termsCheckbox" name="termsCheckbox" required
                         data-msg="Please accept our Terms and Conditions."
                         data-error-class="u-has-error"
                         data-success-class="u-has-success">
                  <label class="custom-control-label" for="termsCheckbox">
                    <small>
                      <a class="u-link-muted" href="../pages/terms.html">利用規約に同意しました。</a>
                    </small>
                  </label>
                </div>
              </div>
              <!-- End Checkbox -->

              <!-- Button -->
              <div class="row align-items-center mb-5">
                <div class="col-5 col-sm-6">
                  <%= link_to "すでにアカウントをお持ちの方", login_path %>
                </div>

                <div class="col-7 col-sm-6 text-right">
                  <%= f.submit "新規登録", class:"btn btn-primary u-btn-primary transition-3d-hover" %>
                </div>
              </div>

              <div class="row align-items-center mb-5">
                <div class="col-4 col-sm-6">
                  <%= link_to '/auth/facebook' do %>
                    <img src="/icon/facebook-login_button.png" class="mb-3">
                  <% end %>
                    <img src="/icon/twitter-login_button.png" class="mb-3">
                  <%= link_to '/auth/google_oauth2' do %>
                    <img src="/icon/google-login_button.png" class="mb-3">
                  <% end %>
                </div>
              </div>
            <% end %>
              <!-- End Button -->
            </form>
            <!-- End Form -->
          </div>
        </div>
      </div>
    </div>
    <!-- End Form -->
  </main>
  <!-- ========== END MAIN ========== -->
</body>
</html>
